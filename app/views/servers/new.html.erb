<h1>New server</h1>

<p>Category: <%= @category.name %></p>

<% form_for([@category, @server]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= submit_to_remote 'check', 'Check', :url => { :controller => 'servers', :action => 'check' }, :success => 'alert("Hello!")' %>
    <%= f.submit 'Submit', :disabled => 'disabled' %>
  </p>
<% end %>

<%= link_to 'Back', root_path %>
